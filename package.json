{
  "name": "jelly-j",
  "version": "0.1.0",
  "description": "Jelly J â€” Claude-powered Zellij workspace assistant",
  "type": "module",
  "bin": {
    "jelly-j": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "bun": ">=1.3.0"
  },
  "keywords": [
    "zellij",
    "terminal",
    "multiplexer",
    "claude",
    "ai",
    "assistant",
    "workspace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/victorarias/jelly-j"
  },
  "license": "MIT",
  "scripts": {
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outfile dist/index.js --target bun --format esm --banner '#!/usr/bin/env bun'",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "setup:local": "bun scripts/setup-local.ts",
    "ops:restart": "bun scripts/restart-jellyj.ts",
    "test:harness:cli": "bun tests/e2e/alt-j-cli-harness.ts",
    "test:harness:global": "bun tests/e2e/global-presence-harness.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  }
}
